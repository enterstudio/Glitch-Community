// notifications.styl


.notifications
  z-index: 11
  // top: 60px
  // right: side-padding
  // position: absolute
  top: 20px
  right: 20px
  position: fixed
  user-select: none
  pointer-events: none

  .notification
    background-color: notification
    color: background-color
    font-size: 12px
    font-weight: 600
    padding: 5px 8px
    border-radius: 5px
    max-width: 260px
